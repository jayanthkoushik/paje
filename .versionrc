{
  "bumpFiles": [
    {
      "filename": ".version",
      "type": "plain-text"
    }
  ],
  "scripts": {
    "postbump": "perl -pi -e \"s/image: .*$/image: 'Dockerfile'/g\" action.yml",
    "precommit": "git add action.yml",
    "postcommit": "git tag -f v`cat .version | cut -d. -f1`"
  },
  "commit-all": true,
  "skip": {
    "changelog": true
  }
}
